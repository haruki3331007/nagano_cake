<div class="new_registration">
    <h2>商品編集</h2>

    <%= form_with model: @item, url: admin_item_path(@item.id) do |i| %>
        <div class="field">
            <p>商品画像</p>
            <%= i.file_field :image %> 
        </div>

        <div class="field">
            <p>商品名</p>
            <% i.label :name%>
            <%= i.text_field :name, placeholder: "商品名" %>

        <% i.label :introduction %>
            <p>商品説明</p>
            <%= i.text_area :introduction, placeholder: "ここに説明文を記述します" %>
        </div>

        <div class="field">
            <p>ジャンル</p>
            <% i.label :genre_id %>
            <%= i.collection_select(:genre_id, @genres, :id, :name, {include_blank: "--選択してください--"}) %>
        </div>

        <div class="field">
            <p>税抜価格</p>
            <% i.label :price %>
            <%= i.number_field :price, min: 0, placeholder: "1000" %>円
        </div>

        <div class="field">
            <p>販売ステータス</p>
            <% i.label :is_active %>
            <%= i.radio_button :is_active, true %>販売中
            <%= i.radio_button :is_active, false %>販売停止中
        </div>

        <div class="actions">
            <%= i.submit "変更を保存" %>
        </div>
    <% end %>
</div>