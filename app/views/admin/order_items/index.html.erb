<h3>注文履歴一覧</h3>

<table>
    <thead>
        <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
        </tr>
    </thead>

    <% @orders.each do |o| %>
        <tbody>
            <tr>
                <td>
                    <%= link_to admin_order_item_path(o.id) do %>
                        <%= o.updated_at.to_s(:datetime_jp_full) %>
                    <% end %>
                </td>
                <td><%= o.customer.last_name %><%= o.customer.first_name %></td>
                <td>
                    <% @amount=0 %>
                    <% (o.order_details.all).each do |od| %>
                        <% @amount+=od.amount %>
                    <% end %>
                    <%= @amount %>
                </td>
                <td><%= o.status %></td>
        </tbody>
    <% end %>
</table>