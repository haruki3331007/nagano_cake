<div class="information">

    <h3>
        <%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集
    </h3>
    <%= form_with url: admin_end_user_path, model: @customer do |c| %>

        <table>
            <tr>
                <th>会員ID</th>
                <td><%= @customer.id %></td>
            </tr>
            <tr>
                <th>氏名</th>
                <td><%= c.text_field :last_name %> <%=c.text_field :first_name%></td>
            </tr>
            <tr>
                <th>カナ</th>
                <td><%= c.text_field :last_name_kana %> <%= c.text_field :first_name_kana%></td>
            </tr>
            <tr>
                <th>郵便番号</th>
                <td><%= c.text_field :postal_code %></td>
            </tr>
            <tr>
                <th>住所</th>
                <td><%=c.text_field :address %></td>
            </tr>
            <tr>
                <th>電話番号</th>
                <td><%= c.text_field :telephone_number %></td>
            </tr>
            <tr>
                <th>メールアドレス</th>
                <td><%= c.text_field :email %></td>
            </tr>
            <tr>
                <th>会員ステータス</th>
                <td>
                    <%= c.radio_button :is_active, true %> 有効 
                    <%= c.radio_button :is_active, false %> 退会 
                </td>
            </tr>
        </table>

        <%= c.submit "変更を保存" %>
    <% end %>
</div>