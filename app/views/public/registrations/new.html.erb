<div class="new_registration">
  <h2>新規会員登録</h2>

  <%= form_with model: @customer, url: customer_registration_path do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

    <div class="field">
      <p>名前</p>
      <%= f.label :last_name, "(姓)"%>
      <%= f.text_field :last_name, placeholder: "令和" %>

      <%= f.label :first_name, "(名)"%>
      <%= f.text_field :first_name, placeholder: "道子" %>
    </div>

    <div class="field">
      <p>フリガナ</p>
      <%= f.label :last_name_kana, "(セイ)"%>
      <%= f.text_field :last_name_kana, placeholder: "レイワ" %>

      <%= f.label :first_name_kana, "(メイ)"%>
      <%= f.text_field :first_name_kana, placeholder: "ミチコ" %>
    </div>

    <div class="field">
      <p>メールアドレス</p>
      <% f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %>
    </div>

    <div class="field">
      <p>郵便番号(ハイフンなし)</p>
      <% f.label :postal_code %>
      <%= f.text_field :postal_code, placeholder: "0000000" %>
    </div>

    <div class="field">
      <p>住所</p>
      <% f.label :address %>
      <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0" %>
    </div>

    <div class="field">
      <p>電話番号(ハイフンなし)</p>
      <% f.label :telephone_number %>
      <%= f.text_field :telephone_number, placeholder: "00000000000" %>
    </div>

    <div class="field">
      <p>パスワード(６文字以上)</p>
      <% f.label :password%>
      <%= f.password_field :password, autocomplete: "new-password"%>
    </div>

    <div class="field">
      <p>パスワード(確認用)</p>
      <% f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <%= f.submit "新規登録" %>
    </div>
  <% end %>
</div>

<div class="already_registration">
  <h2>即に登録済みの方</h2>
  <p><%= link_to "こちら" ,  new_customer_session_path %> からログインしてください。</p>
</div>