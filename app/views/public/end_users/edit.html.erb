<div class="information">

    <h3>会員情報編集</h3>
    <%= form_with url: end_user_path, model: @customer do |c| %>

        <table>
            <tbody>
                <tr>
                    <td>氏名</td>
                    <td><%= c.text_field :last_name %> <%=c.text_field :first_name%></td>
                </tr>
                <tr>
                    <td>カナ</td>
                    <td><%= c.text_field :last_name_kana %> <%= c.text_field :first_name_kana%></td>
                </tr>
                <tr>
                    <td>郵便番号</td>
                    <td><%= c.text_field :postal_code %></td>
                </tr>
                <tr>
                    <td>住所</td>
                    <td><%=c.text_field :address %></td>
                </tr>
                <tr>
                    <td>電話番号</td>
                    <td><%= c.text_field :telephone_number %></td>
                </tr>
                <tr>
                    <td>メールアドレス</td>
                    <td><%= c.text_field :email %></td>
                </tr>
                <tr>
                    <td></td>
                    <td><%= c.submit "編集内容を保存" %></td>
                    <td><a data-method="delete" href="/end_users/<%= current_customer.id %>">退会する</a></td>
                </tr>
            </tbody>
        </table>
    <% end %>
</div>