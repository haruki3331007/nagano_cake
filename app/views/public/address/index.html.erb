<h3>配送先登録/一覧</h3>

<table div="new_address">
    <%= form_with model: @address, url: end_user_address_index_path(current_customer) do |a| %>
        <th>郵便番号(ハイフンなし)</th>
        <td><%= a.text_field :postal_code, placeholder: "0000000" %></td>

        <th>住所</th>
        <td><%= a.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0" %></td>

        <th>宛名</th>
        <td><%= a.text_field :name, placeholder: "令和道子" %></td>

        <td><%= a.submit "新規登録" %></td>
    <% end %>
</table>

<table div="addresses">
    <thead>
        <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th>&nbsp;</th>
        </tr>
    </thead>

    <tbody>
        <% @addresses.each do |a| %>
            <tr>
                <td><%= a.postal_code %></td>
                <td><%= a.address %></td>
                <td><%= a.name %></td>
                <td>
                    <%= link_to "編集する", edit_end_user_address_path(@current_customer.id, a.id) %> 
                    <%= link_to "削除する", end_user_address_path(@current_customer.id, a.id), method: :delete %>
                </td>
            </tr>
        <% end %>
    <tbody>
</table>