<h3>注文履歴詳細</h3>

<h4>注文情報</h4>
<table>
    <tr>
        <th>注文日</th>
        <td><%= @order.updated_at.to_s(:datetime_jp) %></td>
    </tr>
    <tr>
        <th>配送先</th>
        <td>
            <%= @order.postal_code %>
            <%= @order.address %>
            <%= @order.address_name %>
        </td>
    </tr>
    <tr>
        <th>支払方法</th>
        <td>
            <% if @order.payment_method==0 %>
                クレジットカード
            <% else %>
                銀行振込
            <% end %>
        </td>
    </tr>
    <tr>
        <th>ステータス</th>
        <td><%= @order.status %></td>
    </tr>
</table>

<h4>請求情報</h4>
<table>
    <tr>
        <th>商品合計</th>
        <td><%= @order.payment_amount-@order.carriage %></td>
    </tr>
    <tr>
        <th>配送料</th>
        <td><%= @order.carriage %></td>
    </tr>
    <tr>
        <th>ご請求額</th>
        <td><%= @order.payment_amount %></td>
    </tr>
</table>

<h4>注文内容</h4>
<table>
    <thead>
        <tr>
            <th>商品</th>
            <th>単価（税込）</th>
            <th>個数</th>
            <th>小計</th>
        <tr>
    </thead>
    
    <tbody>
        <% @ods.each do |od| %>
            <tr>
                <td><%= od.item.name %></td>
                <td><%= od.price %></td>
                <td><%= od.amount %></td>
                <td><%= od.price*od.amount %></td>
            </tr>
        <% end %>
    </tbody>
</table>